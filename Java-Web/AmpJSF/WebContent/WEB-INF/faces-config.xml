<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
    
    <application>
        <message-bundle>messages</message-bundle>
    </application>
    
    <managed-bean>
        <managed-bean-name>calculatorController</managed-bean-name>
        <managed-bean-class>
            amp.jsf.CalculatorController
        </managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>calculator</property-name>
            <value>#{calculator}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
		<managed-bean-name>helloWorld</managed-bean-name>
		<managed-bean-class>amp.jsf.HelloWorld</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>calculator</managed-bean-name>
		<managed-bean-class>amp.jsf.Calculator</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<!-- <managed-bean-scope>request</managed-bean-scope> -->
	</managed-bean>
	
</faces-config>
